{% extends "SiteFrontendBundle::layout.html.twig" %}
{% block content %}
    <div class="container">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12 login-form-wrap">
            {% if error %}
                <div class="error"> {{ error.messageKey|trans(error.messageData, 'security') }} </div>
            {% endif %}
            <form action="{{ url("fos_user_security_check") }}" method="post" class="ordering-options-form" id="login-form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <fieldset>
                    <label class="control-label" for="inputEmail">Логин *</label>
                    <input class="form-control ordering-options-form-name" type="text" id="inputEmail" name="_username" value="{{ last_username }}" required="required" />
                    <p>Укажите ваш логин</p>
                </fieldset>
                <fieldset>
                    <label class="control-label" for="inputPassword">Пароль *</label>
                    <input class="form-control" type="password" id="inputPassword" name="_password" required="required" />
                    <p>Укажите пароль.</p>
                </fieldset>
                <div>
                    <button type="submit" id="login-submit" class="registration-button">ВОЙТИ</button>
                </div>
            </form>
        </div>
    </div>
{% endblock content %}
{% block seo %}
    <meta name="robots" content="noindex, follow" />
{% endblock seo %}

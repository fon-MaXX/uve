<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Login{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="{{ asset('bundles/siteuser/css/bootstrap.css') }}" rel="stylesheet">
    <style>
        body {
            padding-top: 10px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link href="{{ asset('bundles/siteuser/css/admin.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/siteuser/css/bootstrap-responsive.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/siteuser/css/crud.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/siteuser/css/kendo.common.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/siteuser/css/kendo.bootstrap.min.css') }}" rel="stylesheet">
    <link href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" rel="stylesheet">
    {% include 'SiteUploadBundle:Default:styles.html.twig' %}
    <script src="{{ asset('bundles/siteuser/js/jquery.min.js') }}"></script>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% include 'SiteUploadBundle:Default:scripts.html.twig' %}

    <!-- Le fav and touch icons -->
</head>

<body>

<div class="container admin">
    {% block menu %}

        {#<div class="navbar">#}
        {#<div class="navbar-inner">#}
        {#<span class="brand" >Juremex Admin Panel</span>#}
        {#</div>#}
        {#</div>#}
    {% endblock menu %}
    {% block page %}
        <div class="span12 ">

            <div>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                {% else %}
                {% endif %}
            </div>

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div>
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
        </div>
    {% endblock page %}
</div>

<script src="{{ asset('bundles/siteuser/js/bootstrap.js') }}"></script>
<script src="{{ asset('bundles/siteuser/js/jquery-ui-1.9.2.custom.min.js') }}"></script>
{#<script src="{{ asset('bundles/oksolutionsadmin/js/kendo.web.min.js') }}"></script>#}
<script src="{{ asset('bundles/siteuser/js/main.js') }}"></script>

{% block stylesheet %}{% endblock %}
{% block javascript %}{% endblock %}
</body>
</html>
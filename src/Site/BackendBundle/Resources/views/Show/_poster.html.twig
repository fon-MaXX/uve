{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}
{% block field %}
    {% if value and (value|json_decode.small is defined)  %}
        {% for image in value|json_decode %}
            <img class="poster-img" src="{{ asset(image) }}"/>
        {% endfor %}
    {% else %}
        <img class="poster-img" src="{{ asset('bundles/sitefrontend/images/main/no-image.png') }}">
    {% endif %}
{% endblock field %}